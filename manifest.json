{
  "name": "CB Priority Pages",
  "description": "Test a Site's Priority Pages",
  "version": "1.0",
  "manifest_version": 3,
  "options_page": "options.html",
  "background": {
    "service_worker": "/js/background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.business.org/*",
        "https://*.reviews.org/*"
      ],
      "js": ["content_script.js"],
      "css": ["draggable_div.css"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["/images/right-arrow.png", "/images/left-arrow.png"],
    "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  }
}